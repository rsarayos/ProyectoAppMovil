<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_task"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/cbTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:fontFamily="@font/lexend"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:id="@+id/tv_nombre_Subtarea"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Accesorios Para Fiesta"
            android:fontFamily="@font/lexend"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/ib_ir_detalle_subtarea"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/forwardarrow"
            android:contentDescription="ver subtarea"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTareaHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingStart="15dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_subTarea_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comprar accesorios en zona centro"
            android:textAlignment="center"
            android:textColor="@color/font"
            android:fontFamily="@font/lexend"
            android:textSize="16sp"
            android:background="@drawable/bg_rounded"
            android:padding="25dp"
            android:layout_marginBottom="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/lexend"
                android:text="Precio"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_totalCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lexend"
                android:text="$600.00"
                android:textColor="@color/font"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:textSize="13sp"
            android:textColor="@color/colorButton"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="163dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

</LinearLayout>